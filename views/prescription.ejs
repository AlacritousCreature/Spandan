<%- include('./partials/header') %>

<link rel="stylesheet" type="text/css" href="/stylesheets/registerStyle.css" />
<div class="container" id="mainContainer">
  <h1 class="well" id="formHead">Prescription Note for <%= user.firstname %> <%= user.lastname %></h1>
  <form action="/user/<%= user._id %>/prescription" method="POST">
    <div class="row">
      <div class="col-sm-6 form-group">
        <label>Doctor's Name</label>
        <input
          type="text"
          name="prescription[doctorname]"
          placeholder="Enter doctor's name Here.."
          class="form-control"
        />
      </div>
      <div class="col-sm-6 form-group">
        <label>Date of Checkup</label>
        <input
          type="text"
          name="prescription[date]"
          placeholder="Enter date of checkup Here.."
          class="form-control"
        />
      </div>
    </div>
    <div class="form-group">
      <label>Description</label>
      <input
        type="text"
        name="prescription[note]"
        placeholder="Enter prescription notes.."
        rows="3"
        class="form-control"
      />
    </div>

    <button class="btn btn-lg btn-info">Submit</button>
  </form>
</div>

<%- include('./partials/footer') %>
